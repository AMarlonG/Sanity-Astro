---
import { ViewTransitions } from "astro:transitions";
import { VisualEditing } from "@sanity/astro/visual-editing";

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Moderne web-applikasjon med Sanity CMS og Astro frontend" } = Astro.props;

// Check if Visual Editing should be enabled
const visualEditingEnabled = import.meta.env.PUBLIC_SANITY_VISUAL_EDITING_ENABLED === 'true';
const hasPreviewMode = Astro.cookies.get('sanity-preview-mode')?.value === 'true';
const enableVisualEditing = visualEditingEnabled && hasPreviewMode;
---

<!DOCTYPE html>
<html lang="no">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Enable View Transitions -->
    <ViewTransitions />
  </head>
  <body>
    <slot />
    
    <!-- Visual Editing Component -->
    {enableVisualEditing && <VisualEditing enabled={true} zIndex={1000} />}
  </body>
</html>

<style is:global>
  /* Reset og grunnleggende styling */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, sans-serif;
    background: #fff;
    background-size: 224px;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    line-height: 1.6;
    color: #333;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Typography */
  h1, h2, h3, h4, h5, h6 {
    margin: 1rem 0 0.5rem 0;
    line-height: 1.2;
  }

  h1 { font-size: 2.5rem; }
  h2 { font-size: 2rem; }
  h3 { font-size: 1.5rem; }
  h4 { font-size: 1.25rem; }

  p {
    margin: 1rem 0;
  }

  /* Links */
  a {
    color: #0066cc;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  /* Buttons */
  button {
    background: #0066cc;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
  }

  button:hover {
    background: #0052a3;
  }

  /* Forms */
  input, textarea, select {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
  }

  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Header */
  header {
    background: #f8f9fa;
    padding: 1rem 0;
    border-bottom: 1px solid #e9ecef;
  }

  /* Navigation */
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  nav ul {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  /* Main content */
  main {
    padding: 2rem 0;
  }

  /* Footer */
  footer {
    background: #f8f9fa;
    padding: 2rem 0;
    margin-top: 3rem;
    border-top: 1px solid #e9ecef;
    text-align: center;
  }

  /* View Transitions Enhancements */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation-duration: 0.3s;
    animation-timing-function: ease-in-out;
  }
  
  /* Smooth fade for main content */
  ::view-transition-old(main-content) {
    animation: fade-out 0.2s ease-out;
  }
  
  ::view-transition-new(main-content) {
    animation: fade-in 0.2s ease-in 0.1s;
  }
  
  /* Enhanced event card transitions */
  ::view-transition-old(event-card),
  ::view-transition-new(event-card) {
    animation-duration: 0.4s;
    animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Page title transitions */
  ::view-transition-old(page-title),
  ::view-transition-new(page-title) {
    animation-duration: 0.3s;
    animation-timing-function: ease-out;
  }
  
  /* Event image shared element transitions */
  ::view-transition-old(event-image),
  ::view-transition-new(event-image) {
    animation-duration: 0.5s;
    animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
  }
  
  @keyframes fade-out {
    to { opacity: 0; }
  }
  
  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  /* Respect user motion preferences */
  @media (prefers-reduced-motion: reduce) {
    ::view-transition-old(root),
    ::view-transition-new(root),
    ::view-transition-old(main-content),
    ::view-transition-new(main-content),
    ::view-transition-old(event-card),
    ::view-transition-new(event-card),
    ::view-transition-old(page-title),
    ::view-transition-new(page-title),
    ::view-transition-old(event-image),
    ::view-transition-new(event-image) {
      animation: none;
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    body {
      padding: 0 0.5rem;
    }

    h1 { font-size: 2rem; }
    h2 { font-size: 1.5rem; }

    nav ul {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style> 