---
export interface Props {
  initialFilters?: {
    eventDate?: string;
  };
  filterOptions?: {
    eventDates?: any[];
  };
}

const { 
  initialFilters = {}, 
  filterOptions = {} 
} = Astro.props;

// Hent URL-parametere for √• opprettholde state
const url = new URL(Astro.request.url);
const currentFilters = {
  eventDate: url.searchParams.get('eventDate') || initialFilters.eventDate || '',
};

// Hjelpefunksjon for √• formatere dato
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  const dayNames = ['S√∏ndag', 'Mandag', 'Tirsdag', 'Onsdag', 'Torsdag', 'Fredag', 'L√∏rdag'];
  const monthNames = ['januar', 'februar', 'mars', 'april', 'mai', 'juni', 'juli', 'august', 'september', 'oktober', 'november', 'desember'];
  
  const dayName = dayNames[date.getDay()];
  const day = date.getDate();
  const month = monthNames[date.getMonth()];
  
  return `${dayName}, ${day}. ${month}`;
}
---

<div class="event-filter" data-filter-container>
  <!-- Scrollbare faner -->
  <div class="tabs-container">
    <div class="tabs-scroll">
      <!-- "Alle dager" fane -->
      <button 
        id="tab-all-days"
        class="tab-button ${!currentFilters.eventDate ? 'active' : ''}"
        hx-post="/api/filter-events"
        hx-target="#results-container"
        hx-indicator="#loading-indicator"
        hx-swap="innerHTML"
        hx-vals='{"eventDate": ""}'
        title="Vis alle arrangementer"
      >
        üìÖ Alle dager
      </button>
      
      <!-- Dato-faner -->
      {filterOptions.eventDates?.map((date) => (
        <button 
          id={`tab-${date.date}`}
          class="tab-button ${currentFilters.eventDate === date.date ? 'active' : ''}"
          hx-post="/api/filter-events"
          hx-target="#results-container"
          hx-indicator="#loading-indicator"
          hx-swap="innerHTML"
          hx-vals={`{"eventDate": "${date.date}"}`}
          title={`Vis arrangementer ${formatDate(date.date)}`}
        >
          üìÖ {formatDate(date.date)}
        </button>
      ))}
    </div>
  </div>

  <!-- Loading indikator -->
  <div id="loading-indicator" class="htmx-indicator">
    <span>üîç Laster arrangementer...</span>
  </div>
</div>

