---
interface Props {
  mainTitle: string;
  subtitle?: string;
  className?: string;
}

const { mainTitle, subtitle, className = '' } = Astro.props;
---

<div class={`title-component ${className}`}>
  <h1 class="main-title">{mainTitle}</h1>
  {subtitle && <h2 class="subtitle">{subtitle}</h2>}
</div>

<style>
  /* Title component - Uses global design tokens for consistency
   *
   * This component now uses the refined modular scale from tokens.css.
   * Font sizes automatically scale fluidly across all viewport sizes
   * without needing media queries.
   *
   * Main title uses --fs-3xl for page-level prominence.
   * Subtitle uses --fs-lg for clear differentiation while maintaining harmony.
   */
  .title-component {
    margin-bottom: 2rem;
  }

  .main-title {
    font-size: var(--fs-3xl);  /* 39-44px - Scales fluidly */
    font-weight: var(--font-weight-bold);
    margin-bottom: 0.5rem;
    line-height: var(--line-height-tight);
  }

  .subtitle {
    font-size: var(--fs-lg);  /* 20-23px - Scales fluidly */
    font-weight: var(--font-weight-normal);
    line-height: var(--line-height-normal);
    margin: 0;
  }

  /* No media queries needed! Fluid typography handles all viewport sizes. */
</style> 