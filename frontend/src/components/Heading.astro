---
interface Props {
  level: 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
  text: string;
  id?: string;
  className?: string;
  _key?: string;
  _type?: string;
}

const { level, text, id, className = '', _key, _type } = Astro.props;
---

{level === 'h2' && <h2 id={id} class={`heading-component ${className}`} data-sanity={_key ? `${_type}.${_key}` : _type}>{text}</h2>}
{level === 'h3' && <h3 id={id} class={`heading-component ${className}`} data-sanity={_key ? `${_type}.${_key}` : _type}>{text}</h3>}
{level === 'h4' && <h4 id={id} class={`heading-component ${className}`} data-sanity={_key ? `${_type}.${_key}` : _type}>{text}</h4>}
{level === 'h5' && <h5 id={id} class={`heading-component ${className}`} data-sanity={_key ? `${_type}.${_key}` : _type}>{text}</h5>}
{level === 'h6' && <h6 id={id} class={`heading-component ${className}`} data-sanity={_key ? `${_type}.${_key}` : _type}>{text}</h6>}

<style>
  .heading-component {
    margin: 2rem 0 1rem 0;
    font-weight: 600;
    color: #1a1a1a;
  }

  h2.heading-component {
    font-size: 2rem;
  }

  h3.heading-component {
    font-size: 1.75rem;
  }

  h4.heading-component {
    font-size: 1.5rem;
  }

  h5.heading-component {
    font-size: 1.25rem;
  }

  h6.heading-component {
    font-size: 1.125rem;
  }
  
  @media (max-width: 768px) {
    h2.heading-component {
      font-size: 1.75rem;
    }

    h3.heading-component {
      font-size: 1.5rem;
    }

    h4.heading-component {
      font-size: 1.25rem;
    }

    h5.heading-component {
      font-size: 1.125rem;
    }

    h6.heading-component {
      font-size: 1rem;
    }
  }
</style> 