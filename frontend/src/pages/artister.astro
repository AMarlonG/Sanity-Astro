---
import type { SanityDocument } from "@sanity/client";
import { sanityClient } from "sanity:client";

const ARTISTS_QUERY = `*[_type == "artist" && defined(slug.current)]|order(name asc)[0...20]{
  _id, 
  name, 
  slug,
  instrument,
  country,
  image,
  website,
  socialMedia
}`;

const artists = await sanityClient.fetch<SanityDocument[]>(ARTISTS_QUERY);
---

<html lang="no">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Artister - Sanity + Astro</title>
</head>
<body>
  <main style="max-width: 800px; margin: 0 auto; padding: 2rem;">
    <h1>Artister fra Sanity</h1>
    
    {artists.length > 0 ? (
      <ul style="list-style: none; padding: 0;">
        {artists.map((artist) => (
          <li style="margin-bottom: 2rem; padding: 1rem; border: 1px solid #ddd; border-radius: 8px;">
            <a href={`/artister/${artist.slug.current}`} style="text-decoration: none; color: inherit;">
              <h2 style="margin: 0 0 0.5rem 0; color: #333;">{artist.name}</h2>
              
              <div style="margin-bottom: 0.5rem; color: #666;">
                {artist.instrument && (
                  <p style="margin: 0 0 0.25rem 0;">
                    🎵 {artist.instrument}
                  </p>
                )}
                
                {artist.country && (
                  <p style="margin: 0 0 0.25rem 0;">
                    🌍 {artist.country}
                  </p>
                )}
                
                {artist.website && (
                  <p style="margin: 0; color: #999; font-size: 0.9rem;">
                    🌐 <a href={artist.website} target="_blank" rel="noopener noreferrer" style="color: #007acc;">
                      Offisiell nettside
                    </a>
                  </p>
                )}
              </div>
            </a>
          </li>
        ))}
      </ul>
    ) : (
      <p>Ingen kunstnere funnet. Opprett noen kunstnere i Sanity Studio først.</p>
    )}
    
    <p style="margin-top: 2rem;">
      <a href="/" style="color: #007acc;">← Tilbake til forsiden</a>
    </p>
  </main>
</body>
</html> 