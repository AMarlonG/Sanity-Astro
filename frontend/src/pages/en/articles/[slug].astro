---
import Layout from "../../../layouts/Layout.astro";
import DynamicComponent from "../../../components/DynamicComponent.astro";
import { loadQuery } from "../../../lib/sanity/loadQuery.js";
import { getMultilingualContent } from "../../../lib/utils/language.js";
import { getOptimizedImageUrl } from '../../../lib/imageHelpers';
import { IMAGE_QUALITY } from '../../../lib/imageHelpers';
import { stegaClean } from '@sanity/client/stega';
import type { SanityDocument } from '@sanity/client';

// Generate static paths for all articles
export async function getStaticPaths() {
  const { data: articles } = await loadQuery<SanityDocument[]>({
    query: `*[_type == "article" && (defined(slug_no.current) || defined(slug_en.current))]`,
  });

  return articles.map((article) => {
    // Use English slug, fallback to Norwegian slug
    const slug = article.slug_en?.current || article.slug_no?.current;
    return {
      params: { slug },
    };
  });
}

const { params } = Astro;

// Fetch the specific article based on the slug parameter (English priority)
const { data: article } = await loadQuery({
  query: `*[_type == "article" && $slug in [slug_en.current, slug_no.current, slug.current]][0]{
    _id,
    _type,
    title_en,
    "title": title_en,
    slug_en,
    excerpt_en,
    "excerpt": excerpt_en,
    "image": {
      "image": image{
        asset->{
          _id,
          url,
          metadata {
            dimensions {
              width,
              height,
              aspectRatio
            },
            lqip
          }
        },
        hotspot,
        crop
      },
      "alt": coalesce(imageAlt_en, imageAlt_no, image.alt),
      "credit": coalesce(imageCredit_en, imageCredit_no)
    },
    content_en,
    content_no,
    publishedAt,
    author->{
      _id,
      name,
      "slug": slug.current
    }
  }`,
  params,
});

if (!article) {
  return Astro.redirect('/404');
}

// Get appropriate content array
const content = getMultilingualContent(article, 'en') || article.content_en;
---

<Layout title={stegaClean(article.title || '')}>
  <main>
    <article>
      <header>
        <h1>{stegaClean(article.title || '')}</h1>
        {article.excerpt && <p class="excerpt">{stegaClean(article.excerpt)}</p>}
        {article.publishedAt && (
          <time datetime={new Date(article.publishedAt).toISOString()}>
            {new Intl.DateTimeFormat('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            }).format(new Date(article.publishedAt))}
          </time>
        )}
        {article.author && (
          <p class="author">By {stegaClean(article.author.name)}</p>
        )}
      </header>

      {article.image?.image && (
        <figure class="article-image">
          <img
            src={getOptimizedImageUrl(article.image.image, 800, 450, IMAGE_QUALITY.CARD)}
            alt={stegaClean(article.image.alt || article.title || '')}
            loading="eager"
            decoding="async"
          />
        </figure>
      )}

      {content && Array.isArray(content) && (
        <div class="article-content">
          {content.map((block) => (
            <DynamicComponent key={block._key || block._id} block={block} />
          ))}
        </div>
      )}
    </article>
  </main>
</Layout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  article header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: bold;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .excerpt {
    font-size: 1.25rem;
    line-height: 1.5;
    margin-bottom: 1rem;
  }

  time {
    font-size: 0.9rem;
  }

  .author {
    font-style: italic;
    margin-top: 0.5rem;
  }

  figure.article-image {
    position: relative;
    width: 100%;
    aspect-ratio: 16/9;
    overflow: hidden;
    margin: 0 0 2rem 0;
  }

  .article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .article-content {
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    main {
      padding: 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .excerpt {
      font-size: 1.1rem;
    }
  }
</style>
