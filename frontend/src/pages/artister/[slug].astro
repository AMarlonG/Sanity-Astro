---
import Layout from "../../layouts/Layout.astro";
import DynamicComponent from "../../components/DynamicComponent.astro";
import { createDataService } from "../../lib/sanity/dataService.js";

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/404');
}

// Create data service with Visual Editing support
const dataService = createDataService(Astro.request);

let artist = null;

try {
  artist = await dataService.getArtistBySlug(slug);

  if (!artist) {
    return Astro.redirect('/404');
  }
} catch (error) {
  console.error('Error loading artist:', error);
  return Astro.redirect('/404');
}

export async function getStaticPaths() {
  // In development, return empty array for on-demand rendering
  if (import.meta.env.DEV) {
    return [];
  }

  const dataService = new (await import("../../lib/sanity/dataService.js")).SanityDataService();
  return await dataService.getSlugsForType('artist');
}
---

<Layout title={`${artist.name} - Artist`}>
  <main>
    <nav class="breadcrumb">
      <a href="/artister">‚Üê Tilbake til artister</a>
    </nav>

    <article>
      <header class="artist-header">
        <h1>{artist.name}</h1>

        {artist.excerpt && (
          <p class="artist-excerpt">{artist.excerpt}</p>
        )}

        {artist.instrument && (
          <p class="artist-instrument">{artist.instrument}</p>
        )}

        {artist.country && (
          <p class="artist-country">{artist.country}</p>
        )}

        {artist.image && (
          <figure class="artist-main-image">
            <picture>
              <img
                src={artist.image.asset.url}
                alt={artist.imageAlt || artist.name}
                loading="lazy"
                decoding="async"
              />
            </picture>
            {(artist.imageCaption || artist.imageCredit) && (
              <figcaption class="image-caption">
                {artist.imageCaption && <span class="caption-text">{artist.imageCaption}</span>}
                {artist.imageCredit && <span class="image-credit">{artist.imageCredit}</span>}
              </figcaption>
            )}
          </figure>
        )}
      </header>

      <!-- PageBuilder content from CMS -->
      {artist.content && Array.isArray(artist.content) && artist.content.length > 0 && (
        <div class="artist-content">
          {artist.content.map((block) => (
            <DynamicComponent key={block._key || block._id} block={block} />
          ))}
        </div>
      )}
    </article>
  </main>
</Layout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .breadcrumb {
    margin-bottom: 2rem;
  }

  .breadcrumb a {
    color: var(--link-color, #007acc);
    text-decoration: none;
  }

  .artist-header {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: bold;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .artist-excerpt {
    font-size: 1.2rem;
    line-height: 1.4;
    color: #666;
    margin-bottom: 1.5rem;
    font-style: italic;
  }

  .artist-instrument,
  .artist-country {
    margin-bottom: 0.75rem;
    font-size: 1rem;
  }

  .artist-main-image {
    margin-top: 2rem;
  }

  .artist-main-image img {
    width: 100%;
    max-width: 500px;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .image-caption {
    margin-top: 0.5rem;
    font-size: 0.9rem;
    color: #555;
  }

  .caption-text {
    display: block;
    font-style: italic;
  }

  .image-credit {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.8rem;
    color: #777;
  }

  @media (max-width: 768px) {
    main {
      padding: 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .artist-info {
      padding: 1rem;
    }
  }
</style> 