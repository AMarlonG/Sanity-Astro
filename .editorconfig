# EditorConfig - Cross-editor code formatting standards
# https://editorconfig.org

root = true

# Defaults for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown - preserve trailing spaces (used for line breaks)
[*.md]
trim_trailing_whitespace = false

# Package files - often use 2-space indent
[{package.json,*.yml,*.yaml}]
indent_size = 2
